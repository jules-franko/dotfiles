#!/bin/bash
#Show the currently playing song with mpd

song=$(mpc current)
#state=$(mpc status | grep "#" | awk -F ' ' '{print $1}')
state=$(mpc status | grep "#" | cut -d ' ' -f1)

case $state in
	"[playing]") state="󰐊 " ;;
	"[paused]") state="󰏤 " ;;
	*) state="" ;;
esac

if [ -z "$song" ]; then
	exit 0
else
	echo "$state$(mpc current)"
fi
