#!/bin/bash
#battery for statusbar

capacity=$(cat /sys/class/power_supply/BAT0/capacity)
state=$(cat /sys/class/power_supply/BAT0/status)

case $state in
	"Full") state="âœ…" ;;
	"Charging") state="âš¡" ;;
	"Discharging") state="ðŸ”‹" ;;
	"Not charging") state="ðŸ”‹" ;;
	*) exit 1 ;;
esac

echo "BAT: [$capacity%$state]"
