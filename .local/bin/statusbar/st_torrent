#!/bin/sh
#Written by Luke Smith with minor modifications

res=$(transmission-remote -l | grep % |
	sed " # The letters are for sorting and will not appear.
	s/.*Stopped.*/A 󰓛 /;
	s/.*Seeding.*/Z 󰹢 /;
	s/.*100%.*/N 󰄬 /;
	s/.*Idle.*/B 󰥔 /;
	s/.*Uploading.*/L 󰇚 /;
	s/.*%.*/M ⬇️/" |
		sort -h | uniq -c | awk '{print $3 $1}' | paste -sd ' ' -)

if [ -z $res ]; then
	exit 0
else
	printf "$res\n"
fi
