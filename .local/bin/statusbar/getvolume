#!/bin/bash
#get volume, amixer

#vol=$( amixer | grep "Front Left: Playback" | awk -F ' ' '{print $5}' | tr -d '[]' )
#vol=$( pactl get-sink-volume @DEFAULT_SINK@ | awk -F ' ' '{print $5}' | tr -d '[]' | cut -c1-2 )
vol=$(wpctl get-volume @DEFAULT_SINK@ | awk -F ' ' '{print $2}' | cut -c3-)

case 1 in
	$((vol >= 60)) ) indic="ðŸ”Š";;
	$((vol >= 30)) ) indic="ðŸ”‰";;
	$((vol >= 0)) ) indic="ðŸ”ˆ";;
	*) exit 1 ;;
esac

echo "$indic$vol%"
